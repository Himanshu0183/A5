<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Employees</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Employee Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>                        
                        <th>Status</th>                        
                        <th>Course ID</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td>{{this.employeeNum}}</td>
                        <td><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                        <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                        <td>{{this.addressStreet}} <br> {{this.addressCity}}, {{this.addressState}} <br>{{this.addressPostal}}</td>                        
                        <td><a href="/employees?status={{this.status}}">{{this.status}}</a></td>                        
                        <td>{{this.course}}</td>                        
                    </tr>
                    {{/each}}
            </table>
        </div>
    </div>
    {{#unless employees}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong> 
    </div>    
    {{/unless}}
</div>